<script name="main">
  <var name="hp" type="number" value="10"/>
  <text>before ${hp}</text>
  <choice text="Choose">
    <option text="Heal">
      <code>hp = hp + 5;</code>
    </option>
    <option text="Hit">
      <code>hp = hp - 2;</code>
    </option>
  </choice>
  <text>after ${hp}</text>
</script>
